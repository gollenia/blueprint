{% if breadcrumbs %}
<div class="absolute flex flex-row justify-end pt-4 top-0 right-0 mr-4">
    <a href="/" class="text-xs bg-primary ml-2 px-2 py-1 {{primarycolor.brightness}} rounded-tl-lg">{{ __("Home", "ctx-theme") }}</a>
    {% for item in breadcrumbs %}
        <a class="text-xs bg-primary ml-2 px-2 py-1 {{primarycolor.brightness}} {{ loop.last ? "rounded-br-lg" }}" href="{{item.url}}">{{item.title}}</a>
    {% endfor %}
</div>
{% endif %}
