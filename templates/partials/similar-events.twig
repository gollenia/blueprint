
    {% for item in events %}
        <a class="mb-8 grid grid-cols-3 gap-4 {% for term in item.get_terms() %}{{term.slug}} {% endfor %}" href="{{item.link}}">
            <div class="">
                <img src="{{ item.thumbnail.src('qmedium') }}" class="rounded-tl-md rounded-br-md">
            </div>
    
            <div class="col-span-2">
                <h5 class="">{{item.title}}</h5>
                <span class="text-mediumgray">{{item._start_date|date("j. F Y")}}</span>
                {% if item.post_excerpt is not empty %}
                    <span>{{item.post_excerpt|excerpt(10, "...")}}</span><br/>
                {% endif %}
                
                
                
            </div>
    </a>
    {% endfor %}
