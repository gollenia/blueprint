{% for item in latest_posts %}
    <a class="card-collection {% for term in item.get_terms() %}{{term.slug}} {% endfor %}" href="{{item.link}}">
        <div class="">
            <img src="{{ item.thumbnail.src('qmedium') }}" class="rounded-tl-xl rounded-br-xl">
        </div>
    
        <div class="col-span-2">
            <h5 class="">{{item.title}}</h5>
            {% if item.post_excerpt is not empty %}
                <span>{{item.post_excerpt|excerpt(10, "...")}}</span><br/>
            {% endif %}
            <span class="text-xs text-gray-500">{{item.post_date|date("j. F Y")}}</span>
            
            
        </div>
</a>
{% endfor %}