{% if menu %}
	<ul class="uk-navbar-nav">
	{% for item in menu %}

		{% if item.get_children is not empty %}
			{% set submenu = true %}
		{% else %}
			{% set submenu = false %}
		{% endif %}

		<li class="nav-item {{item.classes | join(' ')}}{% if submenu %} dropdown{% endif %} {% if loop.last %} last{% endif %}">
			<a href="{{item.get_link}}">
				{{item.title}}
				{% if submenu %}<span class="caret"></span>{% endif %}
			</a>
			{% if submenu %}
				{% include "partials/dropdown-menu.twig" with {'menu': item.get_children} %}
			{% endif %}
		</li>
        
	{% endfor %}
    
	</ul>
    <div class="contact  ml-auto>
        <a class="contact-link">
            <img src="{{ site.theme.uri }}/assets/dist/img/mail.svg" width="40px">
        </a>
    </div>
{% endif %}