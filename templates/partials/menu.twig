<nav class="top-bar">

		<a class="jump-to-content" href="#content">{{ __("Content", "blueprint") }}</a>

		<a href="/" class="top-bar__logo">
			<figure>
					{{ source(logo(), ignore_missing = true) }} 
			</figure>
			<span class="top-bar__claim">{{ site.description }}</span>
		</a>

		<div class="top-bar__hamburger" data-target="hamburger-menu" id="hamburger">
				<button @click="open = !open" :class="{'is-active': open}" class="hamburger hamburger--collapse hamburger--3dx" type="button">
				<span class="hamburger__box">
					<span class="hamburger__inner"></span>
				</span>
				</button>
		</div>
		
		<ul class="menu" id="hamburger-menu">

			{% if menu %}
	
				{% for item in menu.get_items %}
		
						<li class="menu__item {{ item.has_child_class ? "menu__item--has-dropdown" }} {{ item.current or item.current_item_ancestor ? 'menu__item--active' }}">
							<a href="{{item.url}}">
								{%if item.post_excerpt %}<i class="menu__icon material-icons">{{item.post_excerpt}}</i>{% endif %}
								<span>{{item.title}}</span>
								{% if item.has_child_class %}<i class="material-icons mobile__arrow">keyboard_arrow_down</i>{% endif %}
							</a>
							{% if item.has_child_class %}
							<ul class="dropdown">
								{% for child in item.children %}
								<li class="dropdown__item {{ child.current or child.current_item_ancestor ? "dropdown__item--active" }}">
									<a href="{{child.url}}">{{child.title}}</a>
								</li>
								{% endfor %}
							</ul>
							{% endif %}
						</li>
		
				{% endfor %}
	
			{% endif %} 
				
		</ul>
	

</nav>
