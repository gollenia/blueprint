<header class="header header--bottom header--order-within">
	{% if post.thumbnail.src('xlarge') %}
		<img style="{{post.flippageimage ? 'transform: scaleX(-1);'}}" src="{{post.thumbnail.src('xlarge')}}" alt="{{post.thumbnail.post_excerpt ?: post.thumbnail.post_title }}">
	{% endif %}
	{% include "partials/breadcrumbs.twig" with {'breadcrumbs': breadcrumbs()} %}

	<div class="header__content">
		<div></div>
		<div>
			<div class="header__title">
				<h1 class="font-script">{{post.title}}</h1>
				<h4 class="ml-4 xl:mr-0">{{post.header.subtitle}}</h4>
				{%if post.header.link.url %}
					<a href="{{ post.header.link.url }}" class="button button--secondary button--large">{{ post.header.link.title }}</a>
				{% endif %}
				{%if link %}
					<a href="{{ link }}" class="button button--secondary button--large">{{ linkText }}</a>
				{% endif %}
			</div>
		</div>
	</div>
</header>

