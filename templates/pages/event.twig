{% extends "master.twig" %}

{% block content %}
    <header>
        <div class="uk-container">
            <div uk-grid>
                <div class="uk-width-1-2@m">
                    <h5 class="uk-margin-remove">{{post.subtitle}}</h5>
                    <h2 class="uk-margin-remove">{{post.title}}</h2>
                </div>
                <div class="uk-width-1-2@m">
                    
                </div>
            </div>
        </div>
    </header>
    
    <article>
        <div class="uk-container">
        <div uk-grid>
            <div class="uk-width-1-2@m">
                <div class="uk-text-muted uk-margin-top">
                    <p class="ctx-post-date uk-flex uk-flex-middle uk-flex-left">
                        <img src="{{ site.theme.uri }}/assets/dist/img/icons/boy.svg" width="20" class="uk-margin-right" uk-svg>
                        <span>{{post.get_terms('audience')|first}}</span>
                    </span>
                    <p class="ctx-post-date uk-flex uk-flex-middle uk-flex-left">
                        <img src="{{ site.theme.uri }}/assets/dist/img/icons/calendar-day.svg" width="20" class="uk-margin-right" uk-svg>
                        <span>{% if post._event_start_date == post._event_end_date %}
                            {{ post._event_start_date|date("j. F") }} ab {{ post._event_start_time|date("G:i") }} - {{ post._event_end|date("j. F Y \\u\\m G:i") }} Uhr
                        {% else %}
                            {{ post._event_start_date|date("j. F Y") }} von {{ post._event_start_time|date("G:i") }} bis {{ post._event_end_time|date("G:i") }} Uhr
                        {% endif %}</span>
                    </p>
                    <p class="ctx-post-date uk-flex uk-flex-middle uk-flex-left">
                        <img src="{{ site.theme.uri }}/assets/dist/img/icons/map.svg" width="20" class="uk-margin-right" uk-svg>
                        <span>Ort</span>
                    </p>

                </div>
                <p class="dotted-line-bottom uk-padding uk-padding-remove-horizontal">{{post.post_excerpt}}</p>
                <div class="dotted-line-bottom uk-padding uk-padding-remove-horizontal">{{post.post_content}}</div>
                <div class="uk-text-right uk-padding uk-padding-remove-horizontal"><a class="uk-button uk-button-primary" href="#booking-modal" uk-toggle>Zur Anmeldung</a></div>
                <div id="booking-modal" class="uk-modal-full" uk-modal>
                    <div class="uk-modal-dialog">
                        <button class="uk-modal-close-full uk-close-large" type="button" uk-close></button>
                            <div class="uk-container uk-padding-large">
                                <h2>Anmeldung zur {{post.post_title}}</h2>
                                {{ booking }}
                            </div>
                        
                    </div>
                </div>
                
                <div class="similar-events uk-hidden@m">
                    
                    {% include "partials/similar-events.twig" with {'events': events} %}
                </div>
            </div>
            <div class="uk-width-1-2@m ctx-event-side uk-flex-first uk-flex-last@m">
                <div class="ctx-event-image">
                    <span>{{post.thumbnail.caption}}</span>
                    <img src="{{ post.thumbnail.src('large') }}" class="ctx-round-edges" alt="Image for {{ post.title }}" />
                </div>
                <div class="similar-events uk-visible@m uk-margin-top">
                    {% include "partials/similar-events.twig" with {'events': events} %}
                </div>
            </div>
        </div>
    </div>
        
    </article>
{% endblock %}