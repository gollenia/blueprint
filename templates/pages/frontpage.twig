{% extends "master.twig" %}

{% block content %}
    <header class="{{ post.thumbnail.src('xlarge') is empty ? "no-background-image" }}" style="padding-top: {{post.headerheight}}vh; background-position: {{headerimageorientation}}; background-image: url('{{ post.thumbnail.src('xlarge') }}')">
        <div class="uk-container">
            <div class="caption">
                
                <h1 class="ctx-font-script uk-margin-remove">{{post.title}}</h1>
                <h3 class="uk-margin-remove">{{post.subtitle}}</h3>
                <a href="/about-us" class=" uk-button uk-button-primary uk-button-large ctx-icon ctx-icon-arrow-forward">Erfahre mehr!</a>
            </div>
        </div>
    </header>
    <article>
        {{ post.content }}
    </article>
{% endblock %}