<div class="mt-auto text-{{buttonAlignment}} py-4">
{% if outline %}
<a class="{{fullWidth ? "width-full"}} rounded-tl rounded-br inline-block bg-none hover:bg-{{buttonColor}} text-{{buttonColor}} border border-primary hover:border-primary hover:text-{{buttonColor}}-contrast
    {{ size == "small" ? "px-2 py-1 text-xs" }}
    {{ size ?: "px-3 py-2" }}
    {{ size == "large" ? "px-4 py-3 text-lg" }} 
" href="{{url}}">{{title}}</a>
{% elseif isLink %}
<a class="{{fullWidth ? "width-full"}} rounded-tl rounded-br inline-block bg-none hover:bg-{{buttonColor}} text-{{buttonColor}} hover:text-{{buttonColor}}-contrast
{{ size == "small" ? "px-2 py-1 text-xs" }}
{{ size ?: "px-3 py-2" }}
{{ size == "large" ? "px-4 py-3 text-lg" }} 
" href="{{url}}">{{title}}</a>
{% else %}
<a class="bg-{{buttonColor}} rounded-tl rounded-br inline-block text-{{buttonColor}}-contrast hover:bg-{{buttonColor}}-darker 
{{ size == "small" ? "px-2 py-1 text-xs" }}
{{ size ?: "px-4 py-2" }}
{{ size == "large" ? "px-6 py-3 text-lg" }}
" href="{{url}}">{{title}}</a>
{% endif %}
</div>