{% set bg = get_color_by_slug(alertColor) %}

<div x-data="{alert: true}" x-show="alert" style="background: {{bg.color}};" class="{{bg.brightness}}  alert">
{{ isDismissable ? "<i class='material-icons absolute text-3xl transform hover:scale-105 transition-transform duration-150 ease-in-out top-2 right-2 cursor-pointer' @click='alert = false'>close</i>" }}
    <h3 class="core-block">{{title}}</h3>
    <p class="core-block">{{alertText}}</p>
</div>